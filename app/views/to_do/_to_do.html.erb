<div id="<%= "to_do_#{todo.id}" %>" class="to_do_item">
  <% if todo.tasks.incomplete.present? %>
    X
  <% else %>
    <%= check_box_tag("completed_to_do_#{todo.id}",
                      "1",
                      todo.completed?,
                      class: 'check_box_tag',
                      onClick: 'updateToDo(this);') %>
  <% end %>
  </br>
  Task: <b><%= todo.name %></b>
  </br>
  Group: <b><%= todo.group.name %></b>
  </br>
  <% if todo.completed %>
    Complete At: <b><%= todo.completed_at %></b>
  <% end %>
</div>